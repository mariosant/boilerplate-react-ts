{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types/",
      "**/types/**/*.d.ts"
    ],
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"]
    },
    "allowSyntheticDefaultImports": true, 
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017.object"
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/node_modules",
    "**/__tests__"
  ]
}
