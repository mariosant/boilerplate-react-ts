{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types/",
      "**/types/**/*.d.ts"
    ],
    "noErrorTruncation": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017.object"
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/__tests__"
  ]
}
